@import 'nib'

*
  box-sizing border-box

html, body
  padding 0
  margin 0
  width 100%
  height 100%
  color #595959
  font-family Calibri, Carlito, sans-serif

h1
  font-size 2em
  margin 0.5em 0 1em

#resume
  text-align left
  display block
  max-width 960px
  width 100%
  margin auto
  overflow hidden
  box-shadow 0 0 1em rgba(0,0,0,.2)

#pdf
  background #555
  width 100%
  padding 1em
  box-shadow 0 0 1em rgb(0,0,0) inset
  h1
    text-align center
  > *
    overflow hidden
    display block
    position relative
    width 960px
    background-color #fff
    box-shadow 0 0 1em rgba(0,0,0,.5)
    margin 1em auto
  [data-type="pdf-preview"]
    padding 0
    border none
    height 679px
  .page
    height 679px
    padding 1em 2em
    header
      .logo
        height 3em
        display inline
        position relative
      .candidate
        display inline
        float right
        font-variant small-caps
        font-size 1.5em
        margin 0
    footer
      position absolute
      bottom 0
      left 20%
      text-align center
      border-top 3px solid #31668e
      width 60%
      margin auto
      font-size 1em
      p
        margin 0
        padding 0
        padding-top .5em
        &:last-child
          position relative
          top -1.2em
      img
        width 2em
        display inline
        position relative
        top .5em
        margin 0 1em

.cover
  h2
    display block
    width 50%
    margin auto
    margin-top 4em
    text-align center
    text-transform uppercase
    color #31668e
  &>p
    text-align center
    font-variant small-caps
    font-size 1.5em
  .logo
    img
      width 15em
    .hashtag
      font-size 1.3em
      margin-left 2em
      font-variant small-caps
      font-weight bold
      color #31668e

.summary
  &>.section
    width 48.2%
    padding 0
    margin .5em
    padding 1em
    height 38.3%
    float left
    border 1px solid #31668e
    z-index 1
    &:nth-of-type(even)
      padding-left 10em
    &:nth-of-type(odd)
      padding-right 10em
    dt
      font-weight bold
      color #31668e
    dd
      margin-left 1em
  .wheel
    absolute top 28% left 35%
    width 30%
    float left
    z-index 100
  .picto
    absolute top 38% left 43%
    width 15%
    z-index 101

.historic-entry
  .mini-header
    position relative
    width 90%
    margin auto
    border-bottom 1px solid #595959
    height .5em
    td
      text-align center
      font-weight bold
      color #31668e
      font-size 1.5em
    .picto
      height 2em
      absolute top -.25em left -1em
  dl
    font-size 1.2em
    width 80%
    margin 1em auto
    display block
    dt
      font-weight bold
      color #31668e



